{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "rootDir": "src",
    "sourceMap": true,
    "declarationMap": true,
    "baseUrl": "./src"
  },
  "exclude": ["node_modules", "dist"]
}
